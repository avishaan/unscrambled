{
  "name": "byslexic",
  "version": "0.5",
  "manifest_version": 2,
  "description": "Make it easy for dislexic people to read",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persisent": true
  },
  "web_accessible_resources": [
    "style.css",
    "fonts/*.*"
  ],
  "content_scripts": [ {
    "all_frames": true,
    "exclude_globs": [  ],
    "include_globs": [ "*" ],
    "js": ["./libs/jquery-2.1.1.min.js", "script.js" ],
    "css": ["style.css"],
    "matches": [ "http://*/", "https://*/", "https://*/*", "http://*/*" ],
    "run_at": "document_end"
  } ],
  "permissions": [ "tabs", "http://*/", "https://*/", "https://*/*", "http://*/*", "contextMenus" ]
}
